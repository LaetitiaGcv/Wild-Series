{% extends 'base.html.twig' %}

{% block title %}Actor{% endblock %}

{% block body %}
    <h1>Actor</h1>

    <table class="table">
        <tbody>
        <tr>
            <th>Name</th>
            <td>{{ actor.name }}</td>
        </tr>
        <tr>
            <th>Programs</th>
            <td>
                <ul>
                    {% for program in actor.programs %}
                        <li class="list-unstyled"><a  class="text-danger" href="{{ path('program_show', {'slug': program.id}) }}">{{ program.title }}</a></li>
                    {% endfor %}
                </ul>
            </td>
        </tr>
        </tbody>
    </table>

    <a href="{{ path('actor_index') }}">back to list</a>

    {% if is_granted('ROLE_ADMIN') %}
    <a href="{{ path('actor_edit', {'slug': actor.slug}) }}">edit</a>
    {% endif %}

    {{ include('actor/_delete_form.html.twig') }}
{% endblock %}
